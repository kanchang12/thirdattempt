// openaiRequest.js

exports.handler = async function(event, context) {
    try {
        // Function logic here
        const userInput = JSON.parse(event.body).user_input;
        // Process userInput and return response
        return {
            statusCode: 200,
            body: JSON.stringify({ generated_text: 'Example response' })
        };
    } catch (error) {
        return {
            statusCode: 500,
            body: JSON.stringify({ error: error.message })
        };
    }
};
